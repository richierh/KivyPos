<RegisterScreenView>
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            md_bg_color: colors['Purple']['500']
            title: "Registrasi"
            left_action_items: [["arrow-left", lambda x: root.kembali()]]
        MDBoxLayout:
            size_hint:1,.3
            Image:
                icon:'lock'
        MDBoxLayout:    
            size_hint:1,.7
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing:10
            orientation: 'vertical' 
            MDTextFieldRect:
                id:username
                hint_text:'username'
                pos_hint: {'center_x': .5 ,'center_y': .5}
                size_hint: .5, None
                height: "30dp"  
            MDTextFieldRect:
                id:password
                hint_text:'password'
                pos_hint: {'center_x': .5 ,'center_y': .5}
                size_hint: .5, None
                height: "30dp"  
            MDTextFieldRect:
                id:fullname
                hint_text:'full name'
                pos_hint: {'center_x': .5 ,'center_y': .5}
                size_hint: .5, None
                height: "30dp"  
            MDTextFieldRect:
                id:address
                hint_text:'address'
                pos_hint: {'center_x': .5 ,'center_y': .5}
                size_hint: .5, None
                height: "30dp"  
            MDBoxLayout:
                size_hint:.5,.2
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation:'horizontal'
                MDBoxLayout:
                    orientation:'vertical'
                MDRaisedButton:
                    size_hint:None,None
                    pos_hint: {'center_x':1 , 'center_y': .5}
                    text:"Setuju"
                    md_bg_color:colors['Purple']['300']
                    on_release: root.registration_proceed(username,password,fullname,address)
            
            MDLabel:
                text: "atau"
                halign:'center'
                size_hint:1,None
                height:50

            MDBoxLayout:

                spacing:10
                size_hint:.5,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation:'horizontal'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .8}
                    size_hint:1,None
                    id:iconbutton
                    icon:'google'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .8}
                    size_hint:1,None
                    id:iconbutton
                    icon:'facebook'

                