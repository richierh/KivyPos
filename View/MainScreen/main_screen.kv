<MainScreenView>
    id:loginscreen
    name:'main screen'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/images/bg_main.png"
    MDBoxLayout:
        pos_hint:{'center_x':.5,'center_y':.5}
        orientation:'vertical'
        size_hint:1,.8
        orientation:'vertical'
        spacing : 10
        MDBoxLayout:
            size_hint:1,1
            pos_hint:{'center_x':.5,'center_y':.1}

            orientation: 'vertical'
            Image:
                source:"assets/images/Gluonit.png"
                pos_hint:{'center_x':.5,'center_y':.1}
                size_hint:.5,.50
                allow_stretch: True
        MDLabel:
            size_hint:1,None
            text:'GluonIT\n Software Development'
            font_size:'24sp'
            halign:'center'
            height:100
            
        MDTextField:
            pos_hint:{'center_x':.5,'center_y':1}
            size_hint:.5,None
            color_mode: 'custom'
            hint_text: "Username/Phone"
            mode: "rectangle"
            hint_text_color:colors['Purple']['200']
            text_color:colors['Purple']['200']
            fill_color:colors['Purple']['200']
            line_color_focus: colors['Purple']['200']
            line_color_normal:colors['Purple']['200']
            normal_color:colors['Purple']['200']
            # line_color_normal:32/255, 123/255, 160/255, 1
            # line_color_focus: 32/255, 123/255, 160/255, 1
            id:username
            name:'username'

        MDTextField:
            name:'password'
            id:password
            pos_hint:{'center_x':.5,'center_y':1}
            size_hint:.5,None
            color_mode: 'custom'
            hint_text: "Password"
            mode: "rectangle"
            # line_color_normal:32/255, 123/255, 160/255, 1
            line_color_normal:colors['Purple']['200']
            line_color_focus: colors['Purple']['200']
            # line_color_focus: 32/255, 123/255, 160/255, 1

        MDBoxLayout:
            orientation:'horizontal'
            padding: ('0dp', '30dp', '0dp', '0dp')
            size_hint:.5,None
            pos_hint:{'center_x':.5,'center_y':.5}
            spacing :20
            height:50
            MDFillRoundFlatButton:
                pos_hint: {'center_x': .5, 'center_y': .8}
                text: "Login"
                md_bg_color:colors['Purple']['500']
                # md_bg_color: 32/255, 123/255, 160/255, 1
                size_hint:.5,None
                on_release:root.login(username,password)
            MDFillRoundFlatButton:
                text: "Sign Up"
                pos_hint: {'center_x': .5, 'center_y': .8}
                md_bg_color:colors['Purple']['500']
                # md_bg_color: 32/255, 123/255, 160/255, 1
                size_hint:.5,None
                on_release: root.signup()

        MDBoxLayout:
            height:30
            size_hint:1,None
            orientation:'vertical'
            pos_hint: {'center_x':.5 , 'center_y':.5 }
           
            MDLabel:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint:1,1
                text:root.mistake
                halign:'center'
                height:25
                font_size:'12sp'
                color:rgba('#ff0000')
        MDBoxLayout:
            size_hint:1,1
            orientation:'vertical'
            pos_hint: {'center_x':.5 , 'center_y':.5 }
