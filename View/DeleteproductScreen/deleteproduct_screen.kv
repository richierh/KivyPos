<DeleteproductScreenView>
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title:'Delete Product'
            left_action_items: [["menu", lambda x: callback()]]
        MDBoxLayout:
            orientation: 'vertical'
            spacing:10
            Image:
                source: "assets/images/BSI.png"
                allow_stretch:True
                size_hint:None,1
                height:300
            MDLabel:
                id:productname
                text:'Product Name'
                halign:'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: 1, None
                height: "30dp"
            MDLabel:
                id:quantity
                text:'Quantity'
                halign:'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: 1, None
                height: "30dp"
            MDLabel:
                id:saleprice
                text:'Sale Price'
                halign:'center'
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: 1, None
                height: "30dp"
            MDLabel:
                hint_text:''
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: .5, None
                height: "30dp"
        MDBoxLayout:
            size_hint:.5,1
            pos_hint: {'center_x': .5, 'center_y': .5}
            orientation:'horizontal'
            spacing:2
            MDRaisedButton:
                size_hint:.5,None
                pos_hint: {'center_x': .5, 'center_y': .5}
                text:'Delete'
                on_release: root.masukan_barang(productname,quantity,saleprice)
            MDRaisedButton:
                size_hint:.5,None
                pos_hint: {'center_x': .5, 'center_y': .5}
                text:'Cancel'
                on_release: root.batalkan_input()
