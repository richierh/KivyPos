<ItemCardShow>:
    mylabelproduk:mylabelproduk
    myproduct:root.myproduct
    # myproduct = []
    screenmanagerproduct:root.screenmanagerproduct
    MDBoxLayout:
        orientation:'vertical'
        # MDImage:
        #     source:root.screenmanager
        MDLabel:
            id:mylabelproduk
            name:'my label'
            halign:'center'
            # text:'Disini ada detail produk yang akan dbeli'


    MDBoxLayout:
        orientation:'vertical'
        adaptive_height:True
        # pos_hint:{'center_x':.5 , 'center_y':0}
        
        spacing:5
        MDRaisedButton:
            size_hint:0.9,0
            screenmanagerproduct:root.screenmanagerproduct
            text:'Cancel'
            on_release:root.cancel_posscreen()        
            pos_hint:{'center_x':.5 , 'center_y':0}

        MDRaisedButton:
            size_hint:.9,0
            screenmanagerproduct:root.screenmanagerproduct
            text:'Ok'
            on_release:root.back_posscreen()
            pos_hint:{'center_x':.5 , 'center_y':0}
