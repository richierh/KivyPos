<SignUpScreen>:
    signup:signup
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'views/logo/background.jpg'

    MDCard :
        size_hint : None,None
        size : 300,600
        pos_hint : {"center_x":.5,"center_y":.5}
        elevation : 15
        # md_bg_color : [35/255,49/255,48/255,1]
        # md_bg_color:theme_cls.prima
        padding : 20
        spacing : 15
        orientation : "vertical"
        # Adding items to the card
        # MDBoxLayout:
        #     id: box_top
        #     # spacing: "20dp"
        #     # adaptive_height: True

        #     Image:
        #         source: "views/logo/python.png"
        #         allow_stretch: True
        #         keep_ratio:True
        #         # size_hint: 1,1
        #         # pos_hint: {'center_x': 0.5, 'center_y': 0.5}  

                # size: dp(50), dp(50)
        MDCard:
            size_hint:None,None
            size:280,100
            padding: 10
            spacing:.5
            pos_hint : {"center_x":.5,"center_y":.5} #center the Card
            orientation:"vertical"
            MDLabel:
                text: "Link to existing Account"
                font_size:10
            BoxLayout:
                orientation:"horizontal"
                MDIconButton:
                    size:20,20
                    icon:"views/logo/icons/google-logo.jpg"

            MDLabel:
                text: "OR"
                font_size:18
                halign:"center"
        MDLabel :
            text : 'REGISTRATION FREE'
            font_style : 'Button'
            font_size : 20
            halign : "center"
            size_hint_y : None
            height : self.texture_size[1]
            padding_y : 15
        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : None
            width : 220
            # font_size : 20
            pos_hint : {"center_x":.5}
            # color_active : [1,1,1,1]
        MDTextFieldRound :
            hint_text : "password"
            icon_right : "eye-off"
            size_hint_x : None
            width : 220
            # font_size : 20
            pos_hint : {"center_x":.5}
            # color_active : [1,1,1,1]
            password : True

        MDRoundFlatButton :
            id: signup
            text : 'Create'
            pos_hint : {"center_x":.5}
            # on_release:app.root.ids.screen_mgr.current = 'pos_m'
            on_release: root.create()

        MDRoundFlatButton :
            text : 'SIGN-UP'
            pos_hint : {"center_x":.5}
            # font_size : 15