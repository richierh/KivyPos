<SignUpScreen>:
    BoxLayout:
        orientation:"vertical"
        padding:0,0,0,10
        spacing:15
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        valign:"center"

        MDToolbar:
            title:"Registration"
            align:"middle"
            left_action_items: [['arrow-left-thick', lambda x:root.left()]]

        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : .5
            pos_hint : {"center_x":.5,"center_y":.1}
            height:20

        MDTextFieldRound :
            hint_text : "password"
            icon_right : "eye-off"
            size_hint_x : .5

            pos_hint : {"center_x":.5,"center_y":.5}
            password : True

        MDTextFieldRound :
            hint_text : "Confirm Password"
            icon_right : "eye-off"
            size_hint_x : .5
            height:20

            pos_hint : {"center_x":.5,"center_y":.5}
            password : True

        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : .5
            pos_hint : {"center_x":.5,"center_y":.5}
            height:20

        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : .5
            pos_hint : {"center_x":.5,"center_y":.5}
            height:20
        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : .5
            pos_hint : {"center_x":.5,"center_y":.5}
            height:20


        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : .5
            pos_hint : {"center_x":.5,"center_y":.5}
            height:20

        BoxLayout:
            orientation:"vertical"
            spacing:15
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint:.5,.5

            MDRoundFlatButton :
                text : 'Create'
                pos_hint : {"center_x":.5,"center_y":.2}
                size_hint_y:None

