<LoginScreen> :
    login_m:login_m
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'views/logo/background.jpg'

    MDCard :
        size_hint : None,None
        size : 300,400
        pos_hint : {"center_x":.5,"center_y":.5}
        elevation : 15
        padding : 20
        spacing : 15
        orientation : "vertical"
        # Adding items to the card
        MDBoxLayout:
            id: box_top
            # spacing: "20dp"
            # adaptive_height: True

            Image:
                source: "views/logo/python.png"
                allow_stretch: True
                keep_ratio:True
                # size_hint: 1,1
                # pos_hint: {'center_x': 0.5, 'center_y': 0.5}  

                # size: dp(50), dp(50)
        MDLabel :
            text : 'LOGIN'
            font_style : 'Button'
            font_size : 45
            halign : "center"
            size_hint_y : None
            height : self.texture_size[1]
            padding_y : 15
        MDTextFieldRound :
            hint_text : "username"
            icon_right : "account"
            size_hint_x : None
            width : 220
            # font_size : 20
            pos_hint : {"center_x":.5}
            # color_active : [1,1,1,1]
        MDTextFieldRound :
            hint_text : "password"
            icon_right : "eye-off"
            size_hint_x : None
            width : 220
            # font_size : 20
            pos_hint : {"center_x":.5}
            # color_active : [1,1,1,1]
            password : True

        MDRoundFlatButton :
            id: login_m
            text : 'Login'
            pos_hint : {"center_x":.5}
            # on_release:app.root.ids.screen_mgr.current = 'pos_m'
            on_release: root.sign_in()

        MDRoundFlatButton :
            text : 'SIGN-UP'
            pos_hint : {"center_x":.5}
            # font_size : 15
            on_release: root.sign_up()


